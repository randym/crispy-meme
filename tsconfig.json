{
  "compilerOptions": {
    "declaration": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ES2018",
    "jsx": "react",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/javascript/src/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "exclude": ["node_modules", "vendor", "public"],
  "compileOnSave": false,
  "include": [
    "global.d.ts",
    "types/**/*.ts",
    "monkey_patching.d.ts",
    "app/javascript/src/**/*.ts",
    "app/javascript/src/**/*.tsx",
    "app/javascript/stylesheets/**/*.css"
  ]
}
